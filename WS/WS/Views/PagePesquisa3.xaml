<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WS.Views.PagePesquisa3" Title="Histórico Ocupacional">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Funções Anteriores:"/>
            <Entry x:Name="txtFunc"/>
            <Label Text="Acidentes de Trabalho:"/>
            <StackLayout Orientation="Horizontal">
                <RadioButton x:Name="rdAcidenteS" Content="Sim" />
                <RadioButton x:Name="rdAcidenteN" Content="Não"/>
            </StackLayout>
            <Label x:Name="lblAcidente" Text="Se sim Quais?"/>
            <Entry x:Name="txtAcidente"/>
            <StackLayout Orientation="Horizontal">

                <Button x:Name="btnFinalizar" Text="Finalizar" Clicked="btnFinalizar_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>